{
  "compilerOptions": {
    "module": "NodeNext", // Utilise les modules ES
    "target": "ESNext", // Support des fonctionnalités modernes
    "esModuleInterop": true, // Permet d'importer des modules CommonJS
    "moduleResolution": "nodenext",
    "strict": true, // Active les vérifications strictes
    "types": ["jest"], // Inclut les types Jest
    "skipLibCheck": true, // Ignore les vérifications des fichiers .d.ts
    "outDir": "./dist", // Dossier de sortie pour les fichiers compilés
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}